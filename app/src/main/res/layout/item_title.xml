<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerItem">
    <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:layout_width="324dp"
            android:layout_height="51dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/itemTitle_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"/>
    <TextView
            android:text="0"
            android:textSize="20sp"
            android:layout_width="59dp"
            android:layout_height="51dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/itemId_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemTitle_tv" android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginEnd="10dp"/>
</android.support.constraint.ConstraintLayout>